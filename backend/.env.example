# Environment Configuration
NODE_ENV=development

# Server
PORT=3000

# CORS (comma-separated origins)
CORS_ORIGINS=*

# CPaaS Provider Configuration
# Choose provider: msg91, exotel, or gupshup (default: msg91)
CPAAS_PROVIDER=msg91

# MSG91 Configuration (https://msg91.com)
MSG91_AUTH_KEY=your_msg91_auth_key_here
MSG91_SENDER_ID=your_sender_id_here
MSG91_TEMPLATE_ID=your_template_id_here

# Exotel Configuration (https://exotel.com)
EXOTEL_ACCOUNT_SID=your_exotel_account_sid_here
EXOTEL_API_KEY=your_exotel_api_key_here
EXOTEL_API_TOKEN=your_exotel_api_token_here
EXOTEL_PHONE_NUMBER=your_exotel_phone_number_here
EXOTEL_FLOW_URL=https://your-flow-url.com/voice

# Gupshup Configuration (https://gupshup.io)
GUPSHUP_USER_ID=your_gupshup_user_id_here
GUPSHUP_PASSWORD=your_gupshup_password_here
GUPSHUP_SOURCE=GSDSMS

# MongoDB
MONGODB_URI=mongodb://localhost:27017/women_safety

# PostgreSQL (alternative)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=women_safety
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
